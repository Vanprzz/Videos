<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Traslucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="titleTextColor">#FFF</item>
        <item name="android:windowContentTransitions">true</item>
    </style>



</resources>
